CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

$(OBJ): %.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	-@$(RM) *~ $(NAME)

oclean:
	-@$(RM) $(OBJ)

fclean: clean oclean
	-@$(RM) $(NAME)

re: fclean all

ifneq ($(wildcard m.h),m.h)
$(error m.h not found)
endif
