CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $@

$(OBJ): %.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	-@/bin/rm -f *~ $(NAME)

oclean:
	-@/bin/rm -f $(OBJ)

fclean: clean oclean
	-@/bin/rm -f $(NAME)

re: fclean all

ifeq (,$(wildcard m.h))
$(error m.h not found)
endif
